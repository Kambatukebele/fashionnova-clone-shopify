<div style="background-color: {{ section.settings.background_color_announcement }}; color:{{ section.settings.text_color_announcement }}" class="w-full py-2 {% if section.settings.checkbox_3_announcement == true %} md:hidden {% endif %}">
  <a href="{{ section.settings.link_announcement }}" class="block min-w-[256px] mx-8 md:flex
    md:items-center
    {% if section.settings.checkbox_2_announcement == false %}
      md:justify-center
      {%  else %}
      md:justify-between
    {% endif %}
    md:w-[730px] md:mx-auto">
    <div class="">
      <p class="text-xl font-bold text-center {{ section.settings.text_transform_announcement }}">Bogo Free Dresses, Sets & Jumpsuits</p>
    </div>
    {% if section.settings.checkbox_2_announcement  %}
    <div class="block mt-3 md:flex md:justify-between md:items-center md:w-[330px] md:mt-0">
      <p class="text-center block uppercase text-xs">Use code : <span class="bg-white px-2 py-1 rounded-md text-black">{{ section.settings.promotional_text }}</span></p>
      <p class="text-center block">
        <span class="font-extrabold text-xl">15</span>h
        <span class="font-extrabold text-xl">55</span>m
        <span class="font-extrabold text-xl">15</span>s
      </p>
      <p class="text-center block underline">Shop now</p>
    </div>
    {% endif %}
  </a>
</div>

{{ section.settings.checkbox_3_announcement }}

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "class": "announcement-bar-section",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "text",
      "id": "text_announcement",
      "default": "Welcome to our store",
      "label": "Announcement Text"
    },
    {
      "type": "url",
      "id": "link_announcement",
      "label": "Announcement Link"
    },
    {
      "type": "checkbox",
      "id": "checkbox_announcement",
      "label": "Show Announcement Bar",
      "default": true
    },
    {
      "type": "color",
      "id": "background_color_announcement",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color_announcement",
      "label": "Text Color",
       "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "text_transform_announcement",
      "label": "Text Transform",
      "options": [
        {
          "value": "uppercase",
          "label": "Text Uppercase"
        },
        {
          "value": "capitalize",
          "label": "Text Capitalized"
        },
        {
          "value": "lowercase",
          "label": "Text Lowercase"
        }
      ],
      "default": "lowercase"
    },
    {
      "type": "checkbox",
      "id": "checkbox_2_announcement",
      "label": "Show Promotional Counter",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "checkbox_3_announcement",
      "label": "Hide on Mobile",
      "default": true
    },
    {
      "type": "text",
      "id": "promotional_text",
      "label": "Enter Promotional Text"
    }
  ],
  "presets": [
    {
      "name": "t:sections.announcement-bar.presets.name"
    }
  ]
}
{% endschema %}
